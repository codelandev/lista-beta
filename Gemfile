source 'https://rubygems.org'

# Ruby Version
ruby '2.2.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.13'
gem 'rails-i18n', '~> 4.0.4'

# Server
gem 'passenger', '~> 5.0.7'

# Use postgresql as the database for Active Record
gem 'pg', '~> 0.18.1'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0.3'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '~> 2.7.1'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

# Use slim templates
gem 'slim-rails', '~> 2.1.3'

# Twitter bootstrap
gem 'bootstrap-sass-rails', '~> 3.0.2.1'

# Simple form for form wrappers
gem 'simple_form'

# ActiveAdmin for admin management
gem 'activeadmin', github: 'activeadmin'

# To manage users
gem 'devise'
gem 'devise-i18n'

# Enumerate_it
gem 'enumerate_it'

# For avatar uploading
gem 'carrierwave', '~> 0.10.0'
gem 'fog', '~> 1.29.0'
gem 'mini_magick', '~> 4.2.3'

# Google Analytics
gem 'google-analytics-rails', '~> 0.0.4'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
# gem 'jbuilder', '~> 1.2'

# To work with tags, like markets field onside Startup Model
gem 'acts-as-taggable-on', '~> 3.5.0'

# To work with friendly-id on Startups show page
gem 'friendly_id', '~> 5.1.0'

# For group records by all kind of dates
gem 'groupdate', '~> 2.4.0'

# Charts API
gem 'chartkick', '~> 1.3.2'

# For elegant meta_tags
gem 'meta-tags', '~> 2.0.0', require: 'meta_tags'

# For pagination
gem 'kaminari', '~> 0.16.3'

# Requests to Getup Cloud
gem 'httparty', '~> 0.13.0'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'rails_12factor'
end

group :development, :test do
  gem 'pry-rails', '~> 0.3.2'
  gem 'letter_opener'
end

group :test do
  gem 'rspec-rails', '~> 2.14.2'
  gem 'machinist', '~> 2.0'
  gem 'database_cleaner', '~> 1.2.0'
  gem 'shoulda-matchers', '~> 2.5.0'
  gem 'simplecov', '~> 0.8.2', require: false
  gem 'webmock', '~> 1.17.4'
  gem 'test-unit' # needed because of ruby 2.2.1
end

